#!/bin/bash
# A script that configures a Nginx server to have a custom 404 page that contains the string Ceci n'est pas une page

# Install Nginx web server
sudo apt-get update
sudo apt-get install -y nginx

# Create a new configuration file for the custom 404 page
cat << EOF > /etc/nginx/sites-available/custom_404
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html;

    # Custom 404 page
    error_page 404 /404.html;

    # Serve static files
    location / {
        try_files $uri $uri/ =404;
    }

    # Handle 404 page
    location = /404.html {
        internal;
        root /var/www/html;
        echo "Ceci n'est pas une page";
    }
}
EOF

# Create a symbolic link from the configuration file to the sites-enabled directory
ln -s /etc/nginx/sites-available/custom_404 /etc/nginx/sites-enabled/

# Test the configuration file to make sure it's valid
nginx -t

# If the configuration file is valid, reload Nginx to apply the new configuration
if [ $? -eq 0 ]; then
    service nginx reload
fi
