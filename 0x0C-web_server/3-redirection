#!/usr/bin/env bash
# A script that configures a Nginx server so that /redirect_me is redirecting to another page


# Configure Nginx to redirect /redirect_me to another page
sudo sed -i 's|^\s*location / {$|\n\n    location /redirect_me {\n        return 301 http://one-techschool.tech;\n    }\n\n    location / {\n|' /etc/nginx/sites-available/default

# Remove duplicate location block
sudo sed -i '/location \/redirect_me {/,/}/d' /etc/nginx/sites-enabled/default

# Test Nginx configuration
sudo nginx -t

# Restart Nginx to apply the configuration changes
sudo service nginx restart
